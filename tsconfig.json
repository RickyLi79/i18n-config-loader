{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ESNext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src", "./tsup.config.ts"]
}
